from fastapi import FastAPI, HTTPException
from fastapi.middleware.cors import CORSMiddleware
from .models import RecommendationRequest
from .recommender import get_recommendations
import uvicorn

app = FastAPI(title="AI Recommendation Engine")

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],  # tighten in prod
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

@app.post("/recommend")
async def recommend(payload: RecommendationRequest):
    ids = await get_recommendations(payload)
    if not ids:
        raise HTTPException(404, "No recommendations found")
    return {"recommendations": ids}

if __name__ == "__main__":
    uvicorn.run("main:app", host="0.0.0.0", port=8000, reload=True)
